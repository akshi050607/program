#include <stdio.h>

float celsiusToFahrenheit(float c);

int main() {
    float c, f;

    printf("Enter temperature in Celsius: ");
    scanf("%f", &c);

    f = celsiusToFahrenheit(c);

    printf("Temperature in Fahrenheit = %.2f\n", f);
    return 0;
}

float celsiusToFahrenheit(float c) {
    return (c * 9 / 5) + 32;
}
