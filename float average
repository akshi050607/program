#include <stdio.h>

float average(int a, int b, int c);

int main() {
    int x, y, z;
    float avg;

    printf("Enter three numbers: ");
    scanf("%d %d %d", &x, &y, &z);

    avg = average(x, y, z);

    printf("Average = %.2f\n", avg);
    return 0;
}

float average(int a, int b, int c) {
    return (a + b + c) / 3.0;
}
