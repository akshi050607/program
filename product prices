#include <stdio.h>

struct product {
    int id;
    char name[20];
    float price;
};

int main() {
    struct product p;

    printf("Enter Product ID: ");
    scanf("%d", &p.id);

    printf("Enter Product Name: ");
    scanf("%s", p.name);

    printf("Enter Product Price: ");
    scanf("%f", &p.price);

    printf("\nProduct Details\n");
    printf("ID: %d\nName: %s\nPrice: %.2f\n",
           p.id, p.name, p.price);

    return 0;
}
