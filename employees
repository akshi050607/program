#include <stdio.h>

int main() {
    int n, i;
    float basic, hra, da, total;

    printf("Enter number of employees: ");
    scanf("%d", &n);

    for (i = 1; i <= n; i++) {
        printf("\nEmployee %d\n", i);
        printf("Enter Basic Salary: ");
        scanf("%f", &basic);

        hra = basic * 0.20;
        da = basic * 0.10;
        total = basic + hra + da;

        printf("Total Salary = Rs. %.2f\n", total);
    }
    return 0;
}
