#include <stdio.h>

struct employee {
    int id;
    char name[20];
    float salary;
};

int main() {
    struct employee e;

    printf("Enter employee id: ");
    scanf("%d", &e.id);

    printf("Enter name: ");
    scanf("%s", e.name);

    printf("Enter salary: ");
    scanf("%f", &e.salary);

    printf("\nEmployee Details\n");
    printf("ID: %d\nName: %s\nSalary: %.2f\n", e.id, e.name, e.salary);

    return 0;
}
