#include <stdio.h>

int main() {
    float amount, discount = 0, finalAmount;

    printf("Enter purchase amount: ");
    scanf("%f", &amount);

    if (amount >= 5000) {
        discount = amount * 0.10;
        printf("Customer is eligible for 10%% discount\n");
    } else {
        printf("Customer is not eligible for discount\n");
    }

    finalAmount = amount - discount;

    printf("Discount Amount = Rs. %.2f\n", discount);
    printf("Final Amount to Pay = Rs. %.2f\n", finalAmount);

    return 0;
}

