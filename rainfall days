#include <stdio.h>

int main() {
    int n, i;
    float rain, total = 0;

    printf("Enter number of days: ");
    scanf("%d", &n);

    for (i = 1; i <= n; i++) {
        printf("Enter rainfall for day %d: ", i);
        scanf("%f", &rain);
        total += rain;
    }

    printf("Average Rainfall = %.2f\n", total / n);
    return 0;
}
