#include <stdio.h>

long factorial(int n);

int main() {
    int num;

    printf("Enter a number: ");
    scanf("%d", &num);

    printf("Factorial = %ld\n", factorial(num));
    return 0;
}

long factorial(int n) {
    long fact = 1;
    int i;

    for (i = 1; i <= n; i++)
        fact *= i;

    return fact;
}
