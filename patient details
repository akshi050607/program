#include <stdio.h>

struct patient {
    int id;
    char name[20];
    int age;
};

int main() {
    struct patient p;

    printf("Enter Patient ID: ");
    scanf("%d", &p.id);

    printf("Enter Name: ");
    scanf("%s", p.name);

    printf("Enter Age: ");
    scanf("%d", &p.age);

    printf("\nPatient Details\n");
    printf("ID: %d\nName: %s\nAge: %d\n",
           p.id, p.name, p.age);

    return 0;
}
