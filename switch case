#include <stdio.h>

int main() {
    int choice;
    float price = 0;

    printf("Menu Card\n");
    printf("1. Tea - Rs.10\n");
    printf("2. Coffee - Rs.20\n");
    printf("3. Juice - Rs.30\n");
    printf("Enter your choice: ");
    scanf("%d", &choice);

    switch (choice) {
        case 1:
            price = 10;
            printf("You selected Tea\n");
            break;
        case 2:
            price = 20;
            printf("You selected Coffee\n");
            break;
        case 3:
            price = 30;
            printf("You selected Juice\n");
            break;
        default:
            printf("Invalid choice\n");
    }

    if (price > 0)
        printf("Total Price = Rs. %.2f\n", price);

    return 0;
}
