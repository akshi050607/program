#include <stdio.h>

struct emp {
    int id;
    char name[20];
};

int main() {
    struct emp e[10];
    int n, i, id;

    printf("Enter number of employees: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++)
        scanf("%d %s", &e[i].id, e[i].name);

    printf("Enter ID to update: ");
    scanf("%d", &id);

    for(i = 0; i < n; i++) {
        if(e[i].id == id) {
            printf("Enter new name: ");
            scanf("%s", e[i].name);
            printf("Updated Record: %d %s\n",
                   e[i].id, e[i].name);
            return 0;
        }
    }

    printf("Record not found\n");
    return 0;
}
